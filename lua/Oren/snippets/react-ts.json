{
    "React Functional Component": {
        "prefix": "rfc",
        "body": [
            "import { FC } from 'react';",
            "",
            "interface Props {",
            "  className?: string;",
            "}",
            "",
            "export const ${1:name}: FC<Props> = ({ className }) => {",
            "  return (",
            "    <>",
            "      <div className={cn(className)}> ",
            "        ${1:name} works!",
            "      </div>",
            "    </>",
            "  );",
            "};"
        ],
        "description": "Create a React Functional Component"
    },
    "React Context Template With Hook": {
        "prefix": "rctx",
        "body": [
            "'use client';",
            "",
            "import React, { createContext, useContext, FC } from \"react\";",
            "",
            "interface Props {",
            "}",
            "",
            "type ContextData = {",
            "}",
            "",
            "const ${1:ContextName}Context = createContext<ContextData | undefined>(undefined);",
            "",
            "export const ${1:ContextName}: FC<Props>  = ({ }) => {",
            "    const data: ContextData = {};",
            "",
            "    return (",
            "        <${1:ContextName}Context.Provider value={data}>",
            "            ${1:ContextName} Works!",
            "        </${1:ContextName}Context.Provider>",
            "    );",
            "};",
            "",
            "export const use${1:ContextName} = () => {",
            "    const context = useContext(${1:ContextName}Context);",
            "    if (!context) {",
            "        throw new Error(\"use${1:ContextName} must be used within a ${1:ContextName}Provider\");",
            "    }",
            "    return context;",
            "};"
        ],
        "description": "General-purpose React Context/Provider/Hook template with placeholders"
    },
    "React Hook Form Component with Zod": {
        "prefix": "rhf-form",
        "body": [
            "import { zodResolver } from \"@hookform/resolvers/zod\";",
            "import { Button } from \"${1:@your-ui/button}\";",
            "import {",
            "    Form,",
            "    FormControl,",
            "    FormDescription,",
            "    FormField,",
            "    FormItem,",
            "    FormLabel",
            "} from \"${2:@your-ui/form}\";",
            "import { ${3:InputComponent} } from \"${4:@your-ui/input}\";",
            "",
            "import {",
            "    ${5:schema},",
            "    ${6:SchemaType}",
            "} from \"${7:@your-types}\";",
            "import { cn } from \"${8:@your-ui/utils}\";",
            "import { FC } from \"react\";",
            "import { useForm } from \"react-hook-form\";",
            "",
            "interface ${9:Props} {",
            "    className?: string;",
            "    onSubmit: (vals: ${6:SchemaType}) => void;",
            "    pending?: boolean;",
            "}",
            "",
            "export const ${10:GenericForm}: FC<${9:Props}> = ({",
            "    className,",
            "    onSubmit,",
            "    pending,",
            "}) => {",
            "    const form = useForm<${6:SchemaType}>({",
            "        resolver: zodResolver(${5:schema}),",
            "        defaultValues: {",
            "            ${11:field}: \"\",",
            "        },",
            "    });",
            "    return (",
            "        <>",
            "            <Form {...form}>",
            "                <form",
            "                    onSubmit={form.handleSubmit((val) => onSubmit(val))}",
            "                    className={cn(\"space-y-8\", className)}",
            "                >",
            "                    <FormField",
            "                        control={form.control}",
            "                        name=\"${11:field}\"",
            "                        render={({ field }) => (",
            "                            <FormItem>",
            "                                <FormLabel>${12:Label}</FormLabel>",
            "                                <FormControl>",
            "                                    <${3:InputComponent}",
            "                                        className=\"w-96 max-w-screen\"",
            "                                        {...field}",
            "                                    />",
            "                                </FormControl>",
            "                                <FormDescription />",
            "                            </FormItem>",
            "                        )}",
            "                    />",
            "                    <div className=\"flex justify-center\">",
            "                        <Button",
            "                            type=\"submit\"",
            "                            disabled={pending}",
            "                            variant=\"${13:primary}\"",
            "                        >",
            "                            ${14:Submit Label}",
            "                        </Button>",
            "                    </div>",
            "                </form>",
            "            </Form>",
            "        </>",
            "    );",
            "};"
        ],
        "description": "A generic React Hook Form component using zodResolver, ready to be customized."
    }
}
